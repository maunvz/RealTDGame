<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal">
    <com.mau.tdclient.ShakeMeter 
        android:id="@+id/shake_meter"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:orientation="vertical">
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="0.1"
    	    android:orientation="horizontal">
    	    <TextView
    	        android:id="@+id/score_text_team1"
    	        android:layout_width="0dp"
    	        android:layout_height="fill_parent"
    	        android:background="@color/red"
    	        android:textColor="@color/white"
    	        android:layout_weight="0.5"/>
    	    <TextView
    	        android:id="@+id/score_text_player"
    	        android:layout_width="0dp"
    	        android:layout_height="fill_parent"
    	        android:background="@color/black"
    	        android:textColor="@color/white"
    	        android:layout_weight="0.5"/>
    	     <TextView
    	        android:id="@+id/score_text_team2"
    	        android:layout_width="0dp"
    	        android:layout_height="fill_parent"
    	        android:background="@color/blue"
    	        android:textColor="@color/white"
    	        android:layout_weight="0.5"/>
 	    </LinearLayout>
        <ScrollView 
    		android:layout_width="match_parent"
    		android:layout_height="0dp"
    		android:layout_weight="0.2"
    		android:background="@color/grey">
	    	<TextView
	    		android:id="@+id/status_message_textview"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:textColor="@color/white"/>    
 		</ScrollView>
    	<me.dm7.barcodescanner.zbar.ZBarScannerView
    	    android:id = "@+id/zbarscan"
    	    android:layout_width = "match_parent"
    	    android:layout_height = "0dp"
    	    android:layout_weight = "0.5">
    	</me.dm7.barcodescanner.zbar.ZBarScannerView>
    	<ScrollView 
    	    android:id="@+id/message_scroll"
    		android:layout_width="match_parent"
    		android:layout_height="0dp"
    		android:layout_weight="0.2"
    		android:background="@color/grey">
	    	<TextView
	    		android:id="@+id/server_message_textview"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:textColor="@color/white"/>    
 		</ScrollView>		
    </LinearLayout>
</LinearLayout>
